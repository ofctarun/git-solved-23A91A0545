{
  "connection": {
    "host": "prod-db.example.com",
    "port": 5432,
    "database": "devops_production",
    "username": "prod_admin",
    "ssl_mode": "require",
    "pool_size": 20,
    "timeout": 30
  },

  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention_days": 30,
    "location": "/backups/database"
  },

  "replication": {
    "enabled": true,
    "replicas": 2,
    "sync_mode": "synchronous"
  },

  "development_profile": {
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "devops_development",
      "username": "dev_user",
      "password": "dev_password",
      "ssl_mode": "disable",
      "pool_size": 5,
      "timeout": 10
    },
    "backup": {
      "enabled": false,
      "schedule": "manual",
      "retention_days": 7,
      "location": "/tmp/backups"
    },
    "replication": {
      "enabled": false,
      "replicas": 0,
      "sync_mode": "asynchronous"
    },
    "development": {
      "seed_data": true,
      "reset_on_restart": true,
      "debug_queries": true
    }
  },

  "_experimental": {
    "_comment": "Experimental configuration â€” not used in production",
    "connection": {
      "type": "distributed",
      "hosts": ["node1.example.com", "node2.example.com", "node3.example.com"],
      "database": "devops_experimental",
      "connection_pooling": "pgbouncer"
    },
    "backup": {
      "strategy": "continuous",
      "schedule": "*/15 * * * *",
      "geo_redundancy": true
    },
    "replication": {
      "multi_region": true,
      "regions": ["us-east", "eu-west", "ap-south"]
    },
    "ai_optimization": {
      "query_optimization": true,
      "index_suggestions": true
    },
    "monitoring": {
      "metrics_export": "prometheus"
    }
  }
}
